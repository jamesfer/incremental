{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "lib": [
      "dom",
      "es2018"
    ],
    "jsx": "react",
    "jsxFactory": "createElement",
    "sourceMap": true,
//    "importHelpers": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,  
    "esModuleInterop": true,
    "outDir": "build",
    "declaration": true,
    "declarationMap": true,
    "types": [
      "incremental-intrinsics"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
