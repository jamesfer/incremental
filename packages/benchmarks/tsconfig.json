{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "lib": [
      "dom",
      "es2018"
    ],
    "sourceMap": true,
    "importHelpers": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,  
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
